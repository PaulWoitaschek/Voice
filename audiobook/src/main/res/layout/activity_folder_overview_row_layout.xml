<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools">

  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="56dp">

    <ImageView
        android:id="@+id/icon"
        style="@style/TintedImageViewStyle"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:padding="8dp"
        android:scaleType="centerInside"
        android:src="@drawable/ic_folder"
        tools:ignore="ContentDescription"
        tools:src="@drawable/ic_folder"
        tools:tint="?attr/colorControlNormal"/>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="56dp"
        android:layout_marginLeft="72dp"
        android:layout_marginRight="56dp"
        android:layout_marginStart="72dp"
        android:ellipsize="marquee"
        android:maxLines="2"
        android:textSize="@dimen/list_text_primary_size"
        tools:text="/storage/scard1/Audiobooks/subfolder/subsdfer/subfodsdfsdffder/subsbder/subfolder/subfolder"/>

    <ImageButton
        android:id="@+id/remove"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:contentDescription="@string/remove"
        android:padding="8dp"
        android:scaleType="centerInside"
        android:src="@drawable/delete"
        tools:src="@drawable/delete"/>

  </RelativeLayout>

</layout>
