<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="@dimen/list_single_item_height">

    <ImageView
        android:id="@+id/singleline_image1"
        style="@style/TintedImageViewStyle"
        android:layout_width="72dp"
        android:layout_height="@dimen/list_single_item_height"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/ic_folder"
        tools:ignore="ContentDescription"
        tools:src="@drawable/ic_album"
        tools:tint="@android:color/black"/>

    <TextView
        android:id="@+id/singleline_text1"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/list_single_item_height"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_marginEnd="16dp"
        android:layout_marginLeft="72dp"
        android:layout_marginRight="16dp"
        android:layout_marginStart="72dp"
        android:gravity="center_vertical"
        android:singleLine="true"
        android:textSize="@dimen/list_text_primary_size"
        tools:text="ExampleFolder"/>

</RelativeLayout>

