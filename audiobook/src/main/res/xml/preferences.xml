<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <Preference
        android:key="@string/pref_key_root_folder"
        android:title="@string/pref_root_folder_title" />
    <CheckBoxPreference
        android:key="@string/pref_key_resume_on_replug"
        android:title="@string/pref_resume_on_replug"
        android:summary="@string/pref_resume_on_replug_hint"
        android:defaultValue="true" />
    <CheckBoxPreference
        android:key="@string/pref_key_cover_on_internet"
        android:title="@string/pref_cover_on_internet"
        android:summary="@string/pref_cover_on_internet_hint"
        android:defaultValue="false" />
    <de.ph1b.audiobook.dialog.SeekPreferenceDialog
        android:key="@string/pref_key_seek_time"
        android:title="@string/pref_seek_time" />
    <de.ph1b.audiobook.dialog.SleepPreferenceDialog
        android:key="@string/pref_key_sleep_time"
        android:title="@string/pref_sleep_time" />
    <CheckBoxPreference
        android:key="@string/pref_key_track_to_end"
        android:summary="@string/pref_summary_track_to_end"
        android:title="@string/pref_title_track_to_end"
        android:defaultValue="false" />
    <CheckBoxPreference
        android:key="@string/pref_key_pause_on_transient_interrupt"
        android:summary="@string/pref_summary_pause_on_transient"
        android:title="@string/pref_title_pause_on_transient"
        android:defaultValue="false" />
    <CheckBoxPreference
        android:key="@string/pref_key_auto_rewind_on_pause"
        android:summary="@string/pref_summary_auto_rewind"
        android:title="@string/pref_title_auto_rewind"
        android:defaultValue="false" />
</PreferenceScreen>